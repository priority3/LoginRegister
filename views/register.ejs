<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>注册页面</title>
        <style>
            .err {
                color: red;
            }
        </style>
    </head>

    <body>
        <!-- ejs -->
        <span><span class="err"><%=errMsg.networkErr%></span></span>
        <!-- <span><span class="err"><%=errMsg.networkErr%></span> <br /></span> -->
        <form action="http://localhost:3000/register" method="POST">
            邮箱
            <input type="text" name="email" /><span class="err"
                ><%=errMsg.email%></span
            >
            <br />
            昵称<input type="text" name="nick_name" /><span class="err"
                ><%=errMsg.email%></span
            >
            <br />密码 <input type="password" name="password" /><span
                class="err"
                ><%=errMsg.email%></span
            >
            <br />
            再次输入密码
            <input type="password" name="re_password" /><span class="err"
                ><%=errMsg.email%></span
            >
            <br />
            <input type="submit" />
        </form>
    </body>
</html>
